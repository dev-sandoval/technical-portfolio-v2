---
import Layout from '@app/layouts/Layout.astro';

// Import all UI components
import {
	LinkButton,
	LinkInline,
	SectionContainer,
	TitleSection,
	Avatar,
	Badge,
	SocialPill,
} from '@shared/ui';

// Import icons
import GitHubIcon from '@assets/technologies/GitHub.astro';
import LinkedInIcon from '@assets/social-networks/LinkedIn.astro';
import MailIcon from '@assets/icons/Mail.astro';
import CodeIcon from '@assets/icons/Code.astro';

const metadata = {
	title: 'Componentes UI - Portfolio David Sandoval',
	description: 'Muestra de componentes UI reutilizables construidos con arquitectura FSD',
};
---

<Layout
	title={metadata.title}
	description={metadata.description}
	img_preview="/projects/portfolio.webp"
>
	<main class="px-4 py-16">
		<SectionContainer>
			<TitleSection>
				<CodeIcon class="size-8" />
				Muestra de Componentes UI
			</TitleSection>

			<div class="space-y-16 mt-8">
				<!-- Link Buttons Section -->
				<section>
					<h2 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100">
						Link Buttons
					</h2>
					<p class="text-gray-600 dark:text-gray-400 mb-4">
						Botones de enlace con estilos consistentes y estados hover/focus.
					</p>
					<div class="flex flex-wrap gap-4">
						<LinkButton href="https://github.com">
							<GitHubIcon class="size-6" />
							GitHub
						</LinkButton>
						<LinkButton href="https://linkedin.com">
							<LinkedInIcon class="size-6" />
							LinkedIn
						</LinkButton>
						<LinkButton href="mailto:example@email.com">
							<MailIcon class="size-6" />
							Contacto
						</LinkButton>
					</div>
				</section>

				<!-- Social Pills Section -->
				<section>
					<h2 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100">
						Social Pills
					</h2>
					<p class="text-gray-600 dark:text-gray-400 mb-4">
						Botones más pequeños con efecto glassmorphism para redes sociales.
					</p>
					<div class="flex flex-wrap gap-4">
						<SocialPill href="https://github.com">
							<GitHubIcon class="size-4 md:size-6" />
							GitHub
						</SocialPill>
						<SocialPill href="https://linkedin.com">
							<LinkedInIcon class="size-4 md:size-6" />
							LinkedIn
						</SocialPill>
						<SocialPill href="mailto:example@email.com">
							<MailIcon class="size-4 md:size-6" />
							Email
						</SocialPill>
					</div>
				</section>

				<!-- Inline Links Section -->
				<section>
					<h2 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100">
						Enlaces en Línea
					</h2>
					<p class="text-gray-600 dark:text-gray-400 mb-4">
						Enlaces estilizados para usar dentro de párrafos o textos.
					</p>
					<div class="space-y-2">
						<p class="text-gray-700 dark:text-gray-300">
							Visita mi <LinkInline href="https://github.com"
								>perfil de GitHub</LinkInline
							> para ver más proyectos.
						</p>
						<p class="text-gray-700 dark:text-gray-300">
							Conéctate conmigo en{' '}
							<LinkInline href="https://linkedin.com">LinkedIn</LinkInline>.
						</p>
					</div>
				</section>

				<!-- Avatar Section -->
				<section>
					<h2 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100">
						Avatares
					</h2>
					<p class="text-gray-600 dark:text-gray-400 mb-4">
						Imágenes circulares optimizadas con múltiples tamaños: xs, sm, md, lg, xl y
						responsive.
					</p>
					<div class="flex flex-wrap gap-8 items-end">
						<div class="flex flex-col items-center gap-2">
							<Avatar src="/profile/perfil.webp" alt="Profile XS" size="xs" />
							<span class="text-sm text-gray-600 dark:text-gray-400">XS (32px)</span>
						</div>
						<div class="flex flex-col items-center gap-2">
							<Avatar src="/profile/perfil.webp" alt="Profile SM" size="sm" />
							<span class="text-sm text-gray-600 dark:text-gray-400">SM (48px)</span>
						</div>
						<div class="flex flex-col items-center gap-2">
							<Avatar src="/profile/perfil.webp" alt="Profile MD" size="md" />
							<span class="text-sm text-gray-600 dark:text-gray-400">MD (96px)</span>
						</div>
						<div class="flex flex-col items-center gap-2">
							<Avatar src="/profile/perfil.webp" alt="Profile LG" size="lg" />
							<span class="text-sm text-gray-600 dark:text-gray-400">LG (192px)</span>
						</div>
					</div>
					<div class="mt-8 flex flex-col items-center gap-2">
						<Avatar
							src="/profile/perfil.webp"
							alt="Profile Responsive"
							size="responsive"
						/>
						<span class="text-sm text-gray-600 dark:text-gray-400">
							Responsive (adapta a pantalla)
						</span>
					</div>
				</section>

				<!-- Badges Section -->
				<section>
					<h2 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100">
						Insignias (Badges)
					</h2>
					<p class="text-gray-600 dark:text-gray-400 mb-4">
						Etiquetas con variantes de color y tamaños: sm, md, lg.
					</p>

					<div class="space-y-6">
						<!-- Default variant -->
						<div>
							<h3 class="text-lg font-semibold mb-3 text-gray-700 dark:text-gray-300">
								Default
							</h3>
							<div class="flex flex-wrap gap-3">
								<Badge variant="default" size="sm">Small</Badge>
								<Badge variant="default" size="md">Medium</Badge>
								<Badge variant="default" size="lg">Large</Badge>
							</div>
						</div>

						<!-- Color variants (medium size) -->
						<div>
							<h3 class="text-lg font-semibold mb-3 text-gray-700 dark:text-gray-300">
								Variantes de Color
							</h3>
							<div class="flex flex-wrap gap-3">
								<Badge variant="primary">Primary</Badge>
								<Badge variant="secondary">Secondary</Badge>
								<Badge variant="success">Success</Badge>
								<Badge variant="warning">Warning</Badge>
								<Badge variant="danger">Danger</Badge>
								<Badge variant="info">Info</Badge>
							</div>
						</div>

						<!-- With icons -->
						<div>
							<h3 class="text-lg font-semibold mb-3 text-gray-700 dark:text-gray-300">
								Con Iconos
							</h3>
							<div class="flex flex-wrap gap-3">
								<Badge variant="primary">
									<GitHubIcon class="size-3" />
									GitHub
								</Badge>
								<Badge variant="info">
									<CodeIcon class="size-3" />
									TypeScript
								</Badge>
								<Badge variant="success"> ✓ Completado </Badge>
							</div>
						</div>

						<!-- Custom styling -->
						<div>
							<h3 class="text-lg font-semibold mb-3 text-gray-700 dark:text-gray-300">
								Personalizado
							</h3>
							<div class="flex flex-wrap gap-3">
								<Badge
									variant="custom"
									class="bg-linear-to-r from-purple-500 to-pink-500 text-white"
								>
									Gradient Badge
								</Badge>
								<Badge
									variant="custom"
									class="bg-black text-white dark:bg-white dark:text-black"
								>
									Custom Colors
								</Badge>
							</div>
						</div>
					</div>
				</section>
				<!-- Section Container -->
				<section>
					<h2 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100">
						Contenedor de Sección
					</h2>
					<p class="text-gray-600 dark:text-gray-400 mb-4">
						Contenedor responsivo con ancho máximo y centrado automático.
					</p>
					<SectionContainer class="bg-gray-100 dark:bg-gray-800 p-8 rounded-lg">
						<h3 class="text-xl font-semibold mb-3 text-gray-800 dark:text-gray-100">
							Ejemplo de Contenedor
						</h3>
						<p class="text-gray-700 dark:text-gray-300 mb-4">
							Este componente SectionContainer aplica automáticamente un ancho máximo
							responsivo y centra el contenido. Es ideal para mantener la consistencia
							en el diseño de todas las secciones.
						</p>
						<ul
							class="list-disc list-inside text-gray-600 dark:text-gray-400 space-y-1"
						>
							<li>Ancho máximo: 4xl en pantallas grandes</li>
							<li>Ancho máximo: 2xl en pantallas medianas</li>
							<li>Centrado automático con mx-auto</li>
							<li>Acepta clases personalizadas para estilos adicionales</li>
						</ul>
					</SectionContainer>
				</section>

				<!-- Title Section -->
				<section>
					<h2 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100">
						Títulos de Sección
					</h2>
					<p class="text-gray-600 dark:text-gray-400 mb-4">
						Títulos consistentes con soporte para iconos.
					</p>
					<div class="space-y-6">
						<TitleSection>Título Simple</TitleSection>
						<TitleSection>
							<GitHubIcon class="size-8" />
							Título con Icono
						</TitleSection>
						<TitleSection>
							<CodeIcon class="size-8" />
							Proyectos Destacados
						</TitleSection>
					</div>
				</section>

				<!-- Combined Example -->
				<section
					class="bg-linear-to-br from-blue-50 to-purple-50 dark:from-gray-900 dark:to-gray-800 p-8 rounded-xl"
				>
					<TitleSection>
						<CodeIcon class="size-8" />
						Ejemplo Combinado
					</TitleSection>
					<p class="text-gray-700 dark:text-gray-300 mb-6">
						Todos los componentes funcionando juntos en una sección.
					</p>

					<div class="flex items-center gap-4 mb-6">
						<Avatar src="/profile/perfil.webp" alt="Profile" size="md" />
						<div>
							<h3 class="text-xl font-bold text-gray-800 dark:text-gray-100">
								Juan David Sandoval
							</h3>
							<div class="flex flex-wrap gap-2 mt-2">
								<Badge variant="primary">Full-Stack Developer</Badge>
								<Badge variant="info">TypeScript</Badge>
								<Badge variant="success">Astro</Badge>
							</div>
						</div>
					</div>

					<p class="text-gray-700 dark:text-gray-300 mb-4">
						Puedes encontrar más información en{' '}
						<LinkInline href="https://github.com">mi perfil de GitHub</LinkInline> o conectar
						conmigo en redes sociales.
					</p>

					<div class="flex flex-wrap gap-4">
						<LinkButton href="https://github.com">
							<GitHubIcon class="size-6" />
							GitHub
						</LinkButton>
						<SocialPill href="https://linkedin.com">
							<LinkedInIcon class="size-4 md:size-6" />
							LinkedIn
						</SocialPill>
						<SocialPill href="mailto:example@email.com">
							<MailIcon class="size-4 md:size-6" />
							Contacto
						</SocialPill>
					</div>
				</section>
			</div>
		</SectionContainer>
	</main>
</Layout>
